extend layout 

block content

    .container 
        form(method='post', action='contact/send')
            h1 Contact 
            .form-group 
                label.mt-4 Name 
                input.form-control(type='text', name='name', placeholder='Enter Name')

            .form-group 
                label.mt-4 Email 
                input.form-control(type='email', name='email', placeholder='Enter Email')

            .form-group 
                label.mt-4 Message 
                input.form-control(type='text', name='message', placeholder='Enter Message')
            
            button.btn.btn-default(type='submit').mt-4 Submit